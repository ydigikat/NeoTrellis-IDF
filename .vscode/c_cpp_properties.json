{
     "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${IDF_PATH}/components/**",
                "${IDF_PATH}/components/*/include"                
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}",
                    "${IDF_PATH}/components"
                ],
                "limitSymbolsToIncludedHeaders": true
            },
            "defines": [
                "ESP_PLATFORM",
                "IDF_VER=\"v5.4.1\""
            ],            
            "compilerPath": "${HOME}/.espressif/tools/xtensa-esp-elf/esp-14.2.0_20241119/xtensa-esp-elf/bin/xtensa-esp32-elf-gcc",            
            "cStandard": "c17",
            "cppStandard": "c++17",            
            "intelliSenseMode": "linux-gcc-x64"
        }
    ],
    "version": 4
}